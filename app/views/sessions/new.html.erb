<section>
  <header>
    <h1>Login</h1>
  </header>

  <%= form_tag '/login' do %>

      <div class="form-group">
        <%= label_tag "email" %>
        <%= email_field_tag :email, nil, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "password" %>
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= submit_tag "Login", class: "btn btn-primary btn-block"  %>
      </div>

  <% end %>
</section>