<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd>$<%= @product.price %></dd>
          <br><br>
          <dt>
            <%= button_to add_item_cart_path(product_id: @product.id), class: 'btn btn-primary', disabled: @product.quantity == 0 , method: :post do %>
              <%= fa_icon "shopping-cart", text: 'Add' %>
            <% end %>
          </dt>
          <br><br>
        </dl>

        <% if @user %>
          <%= form_for :products, url: "/products/#{@product.id}/reviews" do |f| %>
            <div class="form-group">
              <%= label_tag "Description" %>
              <%= f.text_field :description, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= label_tag "Rating" %>
              <%= f.select :rating, [1, 2, 3, 4, 5], class: "form-control" %>
            </div>
            <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
          <% end %>
        <% end %>
        





        <% @review.reverse.map { |review| %>
          <% user = getUser(review.user_id) %>

          <dl class="dl-horizontal">
            <dd><h4><%= "#{user.first_name} #{user.last_name}" %></h4></dd>
            <dt>Stars</dt>
            <dd><%= review.rating %></dd>
            <dt>Review</dt>
            <dd><%= review.description %></dd>
          </dl>
        <% } %>



      </div>
    </div>

  </article>

</section>
