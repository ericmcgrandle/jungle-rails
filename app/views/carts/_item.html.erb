<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>

  <% if current_sale? %>
    <td>
      <%= humanized_money_with_symbol new_price(product.price) %>
    </td>
  <% else %>
    <td>
      <%= humanized_money_with_symbol product.price %>
    </td>
  <% end %>

  <td>
    <%= button_to remove_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-danger' do %> - <% end %>
    <%= quantity %>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-success' do %> + <% end %>
  </td>

  <% if current_sale? %>
    <td>
      <%= humanized_money_with_symbol new_price(product.price) * quantity %>
    </td>
  <% else %>
    <td>
      <%= humanized_money_with_symbol product.price * quantity %>
    </td>
  <% end %>
</tr>
