<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/top_nav' %>

  <main class="container">

    <% if current_sale? %>
      <p class="alert alert-info">
        There is an active <%= active_sale?[0].name %> Sale!
        <strong>Everything is <%= active_sale?[0].percent_off %> off!</strong>
      </p>
    <% end %> 

    <%= yield %>

  </main>

  <%= yield :end_of_body %>
</body>
</html>
